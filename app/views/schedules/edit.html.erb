 <div class="container">
  <div class="schedules_new">
      <%= form_for @schedule, url: travel_schedule_path(@travel, @schedule) do |f| %>
    <div class="mb-3 row">
    <label for="text" class="col-sm-2 col-form-label">プランタイトル</label>
        <div class="col-sm-10">
            <%= @travel.name %>
        </div>
    </div>
    <div class="mb-3 row">
    <label for="text" class="col-sm-2 col-form-label">日付</label>
        <div class="col-sm-10">
        <input type="text" class="form-control" id="inputtext">
        </div>
    </div>
    <div class="mb-3 row">
    <label for="text" class="col-sm-2 col-form-label">開始時刻</label>
        <div class="col-sm-10">
         <%= f.datetime_select :start_at, class: 'form-control' %> 
        </div>
    </div>
    <div class="mb-3 row">
    <label for="text" class="col-sm-2 col-form-label">終了時刻</label>
        <div class="col-sm-10">
         <%= f.datetime_select :end_at, class: 'form-control' %>
        </div>
    </div>
    <div class="mb-3 row">
    <label for="text" class="col-sm-2 col-form-label">スケジュール名</label>
        <div class="col-sm-10">
            <%= f.text_field:title, class: 'form-control' %>
        </div>
    </div>
    <div class="mb-3 row">
    <label for="text" class="col-sm-2 col-form-label">費用</label>
        <div class="col-sm-10">
            <%= f.number_field :cost, class: 'form-control' %>
        </div>
    </div>
         <%= f.submit '更新', class: 'btn btn-primary' %>
     <% end %>
</div>
</div> 
       